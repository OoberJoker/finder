<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swara.finder.PageSelectionFragment"
    android:id="@+id/fragmentPageSelection">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Check Your Postings"
        android:id="@+id/fragmentCheckPosting"
        android:clickable="true"
        android:background="#FFFFFF"
        android:textColor="#0099CC"
        android:layout_gravity="left|center_vertical"
        android:layout_above="@+id/fragmentPostSomething"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Post Something"
        android:id="@+id/fragmentPostSomething"
        android:textColor="#0099CC"
        android:background="#FFFFFF"
        android:layout_marginBottom="187dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom" />

</RelativeLayout>
